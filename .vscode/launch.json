{
    // IntelliSense를 사용하여 가능한 특성에 대해 알아보세요.
    // 기존 특성에 대한 설명을 보려면 가리킵니다.
    // 자세한 내용을 보려면 https://go.microsoft.com/fwlink/?linkid=830387을(를) 방문하세요.
    "version": "0.2.0",
    "configurations": [
        {
            "command": "npm run debug",
            "name": "디버그 모드로 시작",
            "request": "launch",
            "type": "node-terminal"
        },     
        {
            "command": "npm start",
            "name": "라이브 서버 시작",
            "request": "launch",
            "type": "node-terminal"
        },        
        {
            "command": "npm run stop",
            "name": "라이브 서버 중단",
            "request": "launch",
            "type": "node-terminal"
        },
        {
            "type": "node",
            "request": "attach",
            "name": "프로세스에 연결",
            "processId": "${command:PickProcess}",
            "restart": true,
            "protocol": "inspector",
            "skipFiles": [
                "<node_internals>/**"
            ]
        },
        {
            "type": "node-terminal",
            "command": "npm run before",
            "request": "launch",
            "name": "사전 구성요소 설치",
            "skipFiles": [
                "<node_internals>/**"
            ]
        },        
        {
            "type": "node-terminal",
            "command": "npm run test",
            "request": "launch",
            "name": "유닛테스트",
            "skipFiles": [
                "<node_internals>/**"
            ]
        }
    ]
}